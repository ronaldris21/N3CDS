<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.DryIoc.Forms"
             x:Class="PrismSchoolWithLogin.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <Color x:Key="NavigationPrimary">#6E58E8</Color>
        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="{StaticResource NavigationPrimary}" />
            <Setter Property="BarTextColor" Value="White" />
        </Style>

        <!-- Local Styles -Usar donde sean necesarios! -->
        <Style TargetType="Label" x:Key="LabelTitle">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="{StaticResource NavigationPrimary}"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>

    </Application.Resources>
</prism:PrismApplication>